        ALLSELECTED(DateTable)
    )


//--------------------------------------------------------------------
//     MaxAllSelectedDatesInCurrentQtr
//-------------------------------------------------------------------- 

MaxAllSelectedDatesInCurrentQtr:=VAR _Qtr = 
